    "paths": {
        "/generate": {
            "get": {
                "description": "Generate Passwoed",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Password"
                ],
                "summary": "Generates Passwords",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Length of the password",
                        "name": "length",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Number of digits (Default: Length/4)",
                        "name": "digits",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Number of symbols (Default: Length/4)",
                        "name": "symbols",
                        "in": "query"
                    },
                    {
                        "type": "boolean",
                        "description": "Allow repeated chars (Default: true)",
                        "name": "allow_repeat",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/cmd.PasswordResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/cmd.PasswordError"
                        }
                    }
                }
            }
        },
        "/validate": {
            "get": {
                "description": "Validates Passwoed",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Password"
                ],
                "summary": "Validates Passwords",
                "parameters": [
                    {
                        "type": "string",
                        "description": "The password to validate",
                        "name": "password",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/cmd.ValidationResponse"
                        }
                    },
                    "499": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/cmd.ValidationResponse"
                        }
                    }
                }
            }
        }
    },
